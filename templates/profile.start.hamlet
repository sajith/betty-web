  <!-- units -->
  <div #units-panel .panel .panel-default>
    <div .panel-heading>
      <i .fa .fa-cog .fa-fw>
      Preferred units
    <div .panel-body>
      <div #units-update>
        <!-- blood sugar units -->
        <div .form-group>
          <label .col-sm-4 .control-label>
            Choose blood glucose unit
          <div .col-sm-8>
            <select .form-control name=bgUnit>
              <option value=mgdl selected>
                mg/dL
              <option value=mmol>
                mmol/L
        <!-- weight units -->
        <div .form-group>
          <label .col-sm-4 .control-label>
            Choose body weight unit
          <div .col-sm-8>
            <select .form-control name=wtUnit >
              <option value=lb selected>
                Pounds
              <option value=kg>
                Kilograms
    <div .panel-footer>
      <p>
        This information is required so that we can record units
        correctly.

  <!-- Diabetes stats -->
  <div #diabetes-panel .panel .panel-default>
    <div .panel-heading>
      <i .fa .fa-cog .fa-fw>
      Diabetes stats
    <div .panel-body>
      <div #diabetes-update>
        <!-- type of diabetese -->
        <div .form-group>
          <label .col-sm-4 .control-label>
            Type of diabetes
          <div .col-sm-8>
            <select .form-control>
              <option value=0 bgtype=unknown selected>
                --
              <option value=1 bgtype=type1>
                Type 1
              <option value=2 bgtype=type2>
                Type 2
              <option value=3 bgtype=gestational>
                Gestational
              <option value=4 bgtype=lada>
                LADA/Type 1.5
              <option value=5 bgtype=surgical>
                Surgically induced
              <option value=6 bgtype=chemical>
                Chemically induced
        <!-- Year of diagnosis -->
        <div .form-group>
          <label .col-sm-4 .control-label>
            When were you diagnosed?
          <div .col-sm-8>
            <div .input-group>
              <input .form-control name=diagnosedYear type=number min=1900 max=2100 step=1>
        <!-- Year of birth -->
        <div .form-group>
          <label .col-sm-4 .control-label>
            When were you were born?
          <div .col-sm-8>
            <div .input-group>
              <input .form-control name=birthYear type=number min=1900 max=2100 step=1>
    <div .panel-footer>
      <p>
        Filling these fields is optional.  This data is used for
        statistical purpose.

  <!-- reset/save buttons -->
  <div #button-panel .panel>
    <div .panel-body>
      <div .form-group>
        <div .col-sm-offset-4 .col-sm-8>
          <input type=reset value=Reset .btn .btn-default>
          <input type=submit value="Save and continue" .btn .btn-default>
